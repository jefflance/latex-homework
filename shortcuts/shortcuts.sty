}

% sets: N, Z, D, Q, R\Q and R with possibility to minus some numbers
\NewDocumentCommand \R { s g } {
    \IfBooleanTF {#1} {
        \IfNoValueTF {#2} {
            \!\!\!\!\ensuremath{\mathbb{R} \setminus \{0\}}\!\!\!
        }{
            \!\!\!\!\ensuremath{\mathbb{R} \setminus \{0, #2\}}\!\!\!
        }
    }{
        \IfNoValueTF {#2} {
            \!\!\!\!\ensuremath{\mathbb{R}}\!\!\!
        }{
            \!\!\!\!\ensuremath{\mathbb{R} \setminus \{#2\}}\!\!\!
        }
    }
}
